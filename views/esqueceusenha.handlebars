  <script>
 function validateEsqueceu(form) {
    const email = form.email.value.trim(); // Remove espaços em branco
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const errorSpan = document.querySelector('.span11'); // Span para mensagens de erro
    const infoSpan = document.querySelector('.info'); // Span que será ocultado
    infoSpan.style.display='none';//oculta o span info

    // Limpa mensagens de erro anteriores e remove qualquer classe de erro anterior
         errorSpan.textContent = ''; 
          errorSpan.style.display = 'none'; // Garante que está oculto inicialmente

    // Verifica se o campo de e-mail está vazio
    if (!email) {
        if (errorSpan) {
          
            errorSpan.textContent = "O campo de e-mail não pode estar vazio.";
            errorSpan.classList.add('error-message'); // Adiciona a classe de erro
            errorSpan.style.display = 'block'; // Mostra o erro
                        infoSpan.style.display='none';//oculta o span info
                         document.getElementById('message-container').style.display = 'none';//oculta as mensagens vinda do back end para exibir somente essas

        }
        return false; // Impede o envio do formulário
    }

    // Verifica se o e-mail é válido
    if (!emailRegex.test(email)) {
        if (errorSpan) {
            errorSpan.textContent = "Por favor, insira um e-mail válido.";
            errorSpan.classList.add('error-message'); // Adiciona a classe de erro
            errorSpan.style.display = 'block'; // Mostra o erro
            infoSpan.style.display='none';//oculta o span info
                document.getElementById('message-container').style.display = 'none';//oculta as mensagens vinda do back end para exibir somente essas
        }
        return false; // Impede o envio do formulário
    }

    
    return true; // Permite o envio do formulário
}
  </script>
